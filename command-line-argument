#description: full understanding of commandline arguments

IFS="-"
echo "name of the file with location $0"
echo "numer of aruments passed $#"
echo " first argument $1"
echo " second argument $2"
echo " thrid argument $3"
echo "seperated by space for every argument $@"
#seperated by space by by default unless you mention IFS in file but considered as single string
echo "seperated by IFS $*"
